{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>maybeanerd/renovate-config"
  ],
  "packageRules": [
    {
      "description": "Immich releases are stable since v2.0",
      "automerge": true,
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchPackageNames": [
        "ghcr.io/immich-app/{/,}**"
      ]
    }
  ],
  "bumpVersion": "patch",
  "minor": {
    "automerge": false
  }
}
